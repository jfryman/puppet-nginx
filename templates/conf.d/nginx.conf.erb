user <%= scope.lookupvar('nginx::daemon_user') %>;
worker_processes <%= worker_processes %>;

error_log  <%= scope.lookupvar('nginx::logdir')%>/error.log;
pid        <%= scope.lookupvar('nginx::pid')%>;

events {
  worker_connections <%= worker_connections -%>;
<% if scope.lookupvar('nginx::multi_accept') == 'on' %>multi_accept on;<% end -%>
<% if scope.lookupvar('nginx::events_use') %>use <%= scope.lookupvar('nginx::events_use')%>;<% end -%>
}

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  access_log  <%= scope.lookupvar('nginx::logdir')%>/access.log;

  sendfile    <%= scope.lookupvar('nginx::sendfile')%>;

  server_tokens <%= server_tokens %>;
  <% if scope.lookupvar('nginx::tcp_nopush') == 'on' %>tcp_nopush on;<% end %>

  types_hash_max_size <%= scope.lookupvar('nginx::types_hash_max_size')%>;
  types_hash_bucket_size <%= scope.lookupvar('nginx::types_hash_bucket_size')%>;

  server_names_hash_bucket_size <%= scope.lookupvar('nginx::names_hash_bucket_size')%>;

  keepalive_timeout  <%= scope.lookupvar('nginx::keepalive_timeout')%>;
  tcp_nodelay        <%= scope.lookupvar('nginx::tcp_nodelay')%>;

  <% if scope.lookupvar('nginx::gzip') == 'on' %> 
  gzip         on;
  gzip_disable "MSIE [1-6]\.(?!.*SV1)";
  <% end -%>

<% if proxy_cache_path -%>
  proxy_cache_path    <%= proxy_cache_path %> levels=<%= proxy_cache_levels %> keys_zone=<%= proxy_cache_keys_zone %> max_size=<%= proxy_cache_max_size %> inactive=<%= proxy_cache_inactive %>;
<% end -%>

  include /etc/nginx/conf.d/*.conf;
}
<% if scope.lookupvar('nginx::mail') %>
mail {
  include /etc/nginx/conf.mail.d/*.conf;
}
<% end -%>
